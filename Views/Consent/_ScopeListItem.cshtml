@using WebApplication2.Resources
@inject LocService SharedLocalizer
@model WebApplication2.Models.ConsentViewModels.ScopeViewModel

<li class="list-group-item">
    <label>
        <input class="consent-scopecheck big_checkbox" type="checkbox" name="ScopesConsented"
               id="scopes_@Model.DisplayName" value="@Model.Value" checked="@Model.Checked" disabled="@Model.Required" />

        @if (Model.Required)
        {
            <input type="hidden" name="ScopesConsented" value="@Model.DisplayName" />
        }
        <strong class="consent-middle">@Model.DisplayName</strong>
        @if (Model.Emphasize)
        {
            <span class="fas fa-exclamation consent-middle"></span>
        }
    </label>

    @if (Model.Required)
    {
        <span class="consent-middle"><em>@SharedLocalizer.GetLocalizedHtmlString("CONSENT_REQUIRED")</em></span>
    }
    @if (Model.Description != null)
    {
        <div class="">
            <label for="scopes_@Model.DisplayName">@Model.Description</label>
        </div>
    }

</li>

